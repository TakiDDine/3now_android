<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_168sdp"
        android:background="@drawable/round_one_edge"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:id="@+id/backArrow"
            android:layout_width="@dimen/_34sdp"
            android:layout_height="@dimen/_34sdp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/back_round_white"/>
        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_32sdp"
                android:fontFamily="@font/muli_semibold"
                android:textColor="@color/white"
                android:textSize="@dimen/_22sdp"
                android:text="zahlungsmethode"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutContent"
        android:layout_below="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_42sdp"
        android:paddingEnd="@dimen/_25sdp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/_1sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:contentPadding="@dimen/_1sdp">
            <LinearLayout
                android:id="@+id/cash_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_48sdp"
                    android:layout_height="@dimen/_48sdp"
                    android:src="@drawable/ic_cash_new"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_10sdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli_semibold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp"
                        android:text="@string/cash"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli_semibold"
                        android:textSize="@dimen/_12sdp"
                        android:text="@string/default_payment_method"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/_2sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:contentPadding="@dimen/_10sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/payPal_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_8sdp"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="@color/view_grey_bg_"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_13sdp"
                        android:text="Paypal"
                        />
                    <RadioButton
                        android:id="@+id/chkPayPal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimary"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutStripe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="@color/view_grey_bg_"
                    android:gravity="center_vertical">
                    <ListView
                        android:id="@+id/payment_list_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:paddingStart="@dimen/_10sdp"
            android:id="@+id/addCard"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/rounded_button_blue"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="@string/add_new_card"
            android:fontFamily="@font/muli_semibold"
            android:textSize="@dimen/_12sdp"
            android:drawableTint="@color/white"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/_18sdp"
            android:paddingRight="@dimen/_18sdp"
            android:drawableLeft="@drawable/ic_add_circle_outline_black_24dp"
            android:drawablePadding="@dimen/_8sdp"/>


    </LinearLayout>



</RelativeLayout>

