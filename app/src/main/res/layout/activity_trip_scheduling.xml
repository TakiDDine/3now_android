<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.TripSchedulingActivity"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/first_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/im_trip_scheduling"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/im_back"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@drawable/cancel"
                android:backgroundTint="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_24sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:text="@string/find_a_goal"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="@dimen/_300sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="top"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:background="@drawable/ic_line" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="@dimen/_220sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:background="@drawable/ic_rectangle_edge"
                        android:gravity="center"
                        android:padding="@dimen/_20sdp">

                        <TextView
                            android:id="@+id/first_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:text="ABHOLORT - Gerlingstr,43 Essen"
                            android:textColor="#68C9F3"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/pickup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/first_tv"
                            android:maxLines="2"
                            android:text="Gerlingstr,43 45127 Essen"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:visibility="gone"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:background="@drawable/ic_add_round" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_8sdp"
                            android:text="@string/drop_address"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/_220sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_rectangle_edge"
                        android:gravity="center"
                        android:padding="@dimen/_20sdp">

                        <TextView
                            android:id="@+id/second_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:text="ZIELORT- DUS Flughafen "
                            android:textColor="#68C9F3"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/second_tv"
                            android:maxLines="2"
                            android:text="Flughafenstraße 105,40474 Düsseldorf"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp" />

                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/im_swap_location"
                    android:layout_width="@dimen/_19sdp"
                    android:layout_height="@dimen/_19sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:background="@drawable/ic_swap_vertical_circle" />


            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/_8sdp"
                android:background="@drawable/line_divider" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/ic_calnder" />

                <RelativeLayout
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_rectangle_edge"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_16sdp">

                    <TextView
                        android:id="@+id/tv_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pick_up_date"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/btn_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_txt"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="15.01.2020"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/btn_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_txt"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="12:00 Uhr"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/ic_calnder" />

                <RelativeLayout

                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_rectangle_edge"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_16sdp">

                    <TextView
                        android:id="@+id/tv_txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ABHOLDATUM"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_txt2"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="15.01.2020      12:00 Uhr"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/first_ll">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:text="@string/additional_wishes"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16sdp"
                android:background="@drawable/ic_edge_white"
                app:layout_constraintTop_toBottomOf="@id/textView">

                <ImageView
                    android:id="@+id/ic_child_seat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_24sdp"
                    android:background="@drawable/ic_child_seat" />

                <TextView
                    android:id="@+id/tv_child_seat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_toRightOf="@+id/ic_child_seat"
                    android:text="@string/child_seat"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_child_seat"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/ic_child_seat"
                    android:text="@string/Kindersitz_txt"
                    android:textSize="@dimen/_10sdp" />

                <!--                <TextView-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_alignParentRight="true"-->
                <!--                    android:layout_centerVertical="true"-->
                <!--                    android:layout_marginRight="@dimen/_36sdp"-->
                <!--                    android:text="2"-->
                <!--                    android:textColor="@color/black"-->
                <!--                    android:textSize="@dimen/_16sdp" />-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_16sdp">


                    <Spinner
                        android:gravity="end"
                        android:id="@+id/child_seat_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:backgroundTint="@color/black"
                        tools:listitem="@layout/spinner_item" />

                    <View
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:background="@color/black" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:background="@drawable/ic_edge_white"
                app:layout_constraintTop_toBottomOf="@id/textView">

                <ImageView
                    android:id="@+id/im_baby_car_seat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_24sdp"
                    android:background="@drawable/ic_baby_car_seat" />

                <TextView
                    android:id="@+id/tv_baby_car_seat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_toRightOf="@+id/im_baby_car_seat"
                    android:text="@string/baby_car_seat"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_baby_car_seat"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toLeftOf="@+id/ll_spin1"
                    android:layout_toRightOf="@+id/im_baby_car_seat"
                    android:text="@string/baby_car_seat_txt"
                    android:textSize="@dimen/_10sdp" />

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_alignParentRight="true"-->
<!--                    android:layout_centerVertical="true"-->
<!--                    android:layout_marginRight="@dimen/_36sdp"-->
<!--                    android:text="1"-->
<!--                    android:textColor="@color/black"-->
<!--                    android:textSize="@dimen/_16sdp" />-->

<!--                <com.rey.material.widget.Spinner-->
<!--                    style="@style/Material.Widget.Spinner"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_alignParentRight="true"-->
<!--                    android:layout_centerVertical="true"-->
<!--                    android:layout_marginRight="@dimen/_12sdp"-->
<!--                    android:layout_marginBottom="@dimen/_8sdp"-->
<!--                    android:backgroundTint="@color/black"-->
<!--                    app:rd_style="@style/Material.Drawable.Ripple.Wave" />-->

                <LinearLayout
                    android:id="@+id/ll_spin1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_16sdp">

                    <Spinner
                        android:gravity="end"
                        android:id="@+id/baby_car_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:backgroundTint="@color/black"
                        tools:listitem="@layout/spinner_item" />

                    <View
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:background="@color/black" />

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:background="@drawable/ic_edge_white"
                app:layout_constraintTop_toBottomOf="@id/textView">

                <ImageView
                    android:id="@+id/ic_name_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_24sdp"
                    android:background="@drawable/ic_name_tag" />

                <TextView
                    android:id="@+id/tv_name_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_toRightOf="@+id/ic_name_tag"
                    android:text="@string/name_tag"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_toLeftOf="@+id/nameschieldCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name_tag"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/ic_name_tag"
                    android:text="@string/Name_tag_txt"
                    android:textSize="@dimen/_10sdp" />

                <CheckBox
                    android:id="@+id/nameschieldCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:buttonTint="@color/black" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:background="@drawable/ic_edge_white"
                android:padding="@dimen/_24sdp"
                app:layout_constraintTop_toBottomOf="@id/textView">


                <TextView
                    android:id="@+id/tv_Remarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="@string/remarks"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_Remarks"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:hint="@string/note_txt"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>

            <Button
                android:id="@+id/btnSheduleRideConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_14sdp"
                android:background="@drawable/rounded_button_blue"
                android:paddingLeft="@dimen/_36sdp"
                android:paddingRight="@dimen/_36sdp"
                android:text="@string/continu"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>