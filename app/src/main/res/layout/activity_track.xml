<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/test"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_trans"
                android:orientation="vertical">

                <!-- Map frame -->
                <LinearLayout
                    android:id="@+id/mapLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_minus50sdp"
                    android:layout_weight="1"
                    android:background="@color/white_trans"
                    android:orientation="vertical">


                    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/provider_map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                </LinearLayout>

                <!--Project Flow-->
                <LinearLayout
                    android:id="@+id/lnrFlow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <!--Driver Accepted ...-->
                    <LinearLayout
                        android:id="@+id/lnrProviderAccepted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/im_one_round_white"
                        android:backgroundTint="@color/white"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/_28sdp"
                            android:padding="@dimen/_7sdp">

                            <LinearLayout
                                android:id="@+id/llRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imgProvider"
                                android:layout_width="@dimen/_48sdp"
                                android:layout_height="@dimen/_48sdp"
                                android:src="@drawable/ic_dummy_user"
                                app:civ_border_color="@color/button_text_color"
                                app:civ_border_width="1dp" />



                                <TextView
                                    android:id="@+id/lblProvider"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/muli_semibold"
                                    android:maxLength="25"
                                    android:text="@string/sample_name"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp" />

                                <LinearLayout
                                    android:layout_gravity="center"
                                    android:gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RatingBar
                                        android:id="@+id/ratingProvider"
                                        style="?attr/ratingBarStyleSmall"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:isIndicator="true"
                                        android:numStars="5"
                                        android:progressTint="#FFCA28" />

                                    <TextView
                                        android:id="@+id/tv_rate"
                                        android:layout_marginLeft="@dimen/_4sdp"
                                        android:gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:text="4.98"/>
                                </LinearLayout>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvServiceNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_toRightOf="@+id/llRating"
                                android:ellipsize="end"
                                android:fontFamily="@font/muli_semibold"
                                android:maxLength="25"
                                android:paddingLeft="@dimen/_22sdp"
                                android:text="ME-Mo999 ex"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvServiceModel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvServiceNumber"
                                android:layout_toRightOf="@+id/llRating"
                                android:ellipsize="end"
                                android:fontFamily="@font/muli_semibold"
                                android:maxLength="25"
                                android:paddingLeft="@dimen/_22sdp"
                                android:text="Mercedes S-Klasse ex"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="normal" />

                            <LinearLayout
                                android:id="@+id/llCallMess"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/llRating"
                                android:layout_centerHorizontal="true"
                                android:gravity="end"
                                android:orientation="horizontal"
                                android:paddingStart="@dimen/_12sdp">

                                <ImageButton
                                    android:id="@+id/btnCall"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_marginEnd="@dimen/_7sdp"
                                    android:background="@drawable/call_new" />


                                <RelativeLayout
                                    android:layout_width="@dimen/_44sdp"
                                    android:layout_height="@dimen/_44sdp"
                                    android:layout_marginEnd="@dimen/_7sdp">

                                    <ImageButton
                                        android:id="@+id/btnChat"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_marginEnd="@dimen/_7sdp"
                                        android:background="@drawable/chat" />

                                    <TextView
                                        android:id="@+id/new_message_tv"
                                        android:layout_width="@dimen/_12sdp"
                                        android:layout_height="@dimen/_12sdp"
                                        android:background="@drawable/round_shape"
                                        android:backgroundTint="#FF0000"
                                        android:gravity="center"
                                        android:text="!"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_8sdp"
                                        android:visibility="gone" />
                                </RelativeLayout>


                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/_135sdp"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_below="@+id/llCallMess"
                                android:layout_centerHorizontal="true"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:background="#EBEBEB"
                                android:paddingBottom="@dimen/_8sdp" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"

                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:background="@drawable/source_location" />

                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:background="@drawable/destination_location" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lblfrmConfrmRide"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"

                                android:orientation="vertical"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/lblCmfrmSourceAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/muli_semibold"
                                    android:maxLines="2"
                                    android:text="Anamika Enclave"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp" />

                                <TextView
                                    android:id="@+id/lblCmfrmDestAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/muli_semibold"
                                    android:maxLines="2"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/_135sdp"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/_4sdp"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:background="#EBEBEB"
                            android:paddingBottom="@dimen/_8sdp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/imgServiceRequested"
                                    android:layout_width="@dimen/_48sdp"
                                    android:layout_height="@dimen/_48sdp"
                                    android:src="@drawable/car_select" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_semibold"
                                    android:text="@string/distance"
                                    android:textColor="@color/cancel_ride_color"
                                    android:textSize="@dimen/_12sdp" />

                                <TextView
                                    android:id="@+id/lblDis"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_semibold"
                                    android:gravity="end"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_semibold"
                                    android:text="@string/time"
                                    android:textColor="@color/cancel_ride_color"
                                    android:textSize="@dimen/_12sdp" />

                                <de.threenow.Utils.MyBoldTextView
                                    android:id="@+id/lblEta"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_semibold"
                                    android:gravity="end"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp" />

                            </LinearLayout>


                        </LinearLayout>


                        <de.threenow.Utils.MyBoldTextView
                            android:id="@+id/lblSurgePrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:lineSpacingMultiplier="1.3"
                            android:padding="@dimen/_5sdp"
                            android:text="@string/surge_pricing"
                            android:textSize="@dimen/_9sdp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/AfterAcceptButtonLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:orientation="horizontal">


                            <Button
                                android:id="@+id/btnCancelTrip"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_38sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:background="@drawable/red_color_rect_shape"
                                android:fontFamily="@font/muli_semibold"
                                android:text="@string/cancel_trip"
                                android:textColor="@color/button_text_color"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Invoice Layout ...-->
                    <LinearLayout
                        android:id="@+id/lnrInvoice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/blue_gradient"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <include layout="@layout/confirm_payment" />

                    </LinearLayout>

                    <!-- Rate provider Layout ...-->
                    <LinearLayout
                        android:id="@+id/lnrRateProvider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"

                        android:background="@color/colorPrimary"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgProviderRate"
                            android:layout_width="@dimen/_64sdp"
                            android:layout_height="@dimen/_64sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_minus32sdp"
                            android:elevation="@dimen/_5sdp"
                            android:padding="@dimen/_2sdp"
                            android:src="@drawable/ic_dummy_user"
                            app:civ_border_color="@color/white"
                            app:civ_border_width="2dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_25sdp"
                            android:layout_marginBottom="@dimen/_25sdp"
                            android:background="@drawable/blue_gradient"
                            android:backgroundTint="@color/white"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/_35sdp">

                            <!--                        Rajan-->
                            <de.threenow.Utils.MyBoldTextView
                                android:id="@+id/lblProviderName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_semibold"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/muli_semibold"
                                android:text="@string/how_is_your_trip"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_20sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/muli_semibold"
                                android:text="@string/your_feedback_will_help"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/muli_semibold"
                                android:text="@string/improve_driving_experience"
                                android:textSize="@dimen/_12sdp" />

                            <RatingBar
                                android:id="@+id/ratingProviderRate"
                                style="?attr/ratingBarStyleIndicator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:isIndicator="false"
                                android:numStars="5"
                                android:stepSize="1" />


                            <EditText
                                android:id="@+id/txtComments"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_72sdp"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:background="@drawable/blue_gradient"
                                android:backgroundTint="@color/view_grey_bg_"
                                android:fontFamily="@font/muli_semibold"
                                android:gravity="start"

                                android:hint="@string/additional_comments"
                                android:minHeight="@dimen/_64sdp"
                                android:padding="@dimen/_5sdp"
                                android:paddingStart="@dimen/_7sdp"

                                android:paddingTop="@dimen/_7sdp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="@dimen/_11sdp" />

                            <Button
                                android:id="@+id/btnSubmitReview"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:background="@drawable/red_color_rect_shape"
                                android:fontFamily="@font/muli_semibold"

                                android:padding="@dimen/_5sdp"
                                android:text="@string/submit_review"
                                android:textColor="@color/button_text_color"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Source and Destination Layout-->
            <LinearLayout
                android:id="@+id/sourceAndDestinationLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/imgSos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:src="@drawable/sos"
                            android:visibility="gone" />


                        <ImageView
                            android:id="@+id/imgBack"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:src="@drawable/back_icon"
                            android:tint="@color/colorPrimary"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imgMenu"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/menu_icon"
                                android:backgroundTint="@color/blue" />

                            <ImageView
                                android:id="@+id/redMenu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:background="@drawable/red_circle"
                                android:visibility="gone" />


                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/mapfocus"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/current_focus"
                            android:visibility="invisible" />


                        <RelativeLayout
                            android:id="@+id/lnrWaitingForProviders"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <pl.droidsonroids.gif.GifImageView
                                    android:layout_width="@dimen/_150sdp"
                                    android:layout_height="@dimen/_150sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/location_waves" />

                            </FrameLayout>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_100sdp"
                                android:layout_alignParentBottom="true"
                                android:background="@color/text_color_white">

                                <de.threenow.Utils.MyBoldTextView
                                    android:id="@+id/lblNoMatch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:text="@string/looking_for_ride"
                                    android:textColor="@color/black_text_color"
                                    android:textSize="@dimen/_13sdp"
                                    android:visibility="visible" />

                                <de.threenow.Utils.MyButton
                                    android:id="@+id/btnCancelRide"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="@dimen/_20sdp"
                                    android:layout_marginTop="@dimen/_20sdp"
                                    android:layout_marginRight="@dimen/_20sdp"
                                    android:layout_marginBottom="@dimen/_20sdp"
                                    android:background="@drawable/rounded_button"
                                    android:text="@string/cancel_ride"
                                    android:textColor="@color/button_text_color" />

                            </RelativeLayout>

                        </RelativeLayout>
                    </RelativeLayout>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutdriverstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="end"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/driveraccepted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle">

                            <TextView
                                android:id="@+id/txtdriveraccpted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_semibold"
                                android:gravity="center"
                                android:padding="@dimen/_7sdp"
                                android:text="@string/driver_is_on_the_way"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sdp" />

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginEnd="@dimen/_minus13sdp"
                            android:background="@drawable/triangle"
                            android:rotation="90" />
