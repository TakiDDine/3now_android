<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultScheduledActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/img_car"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_28sdp">

                    <ImageView
                        android:id="@+id/im_back"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:background="@drawable/back"
                        android:padding="5dp" />

                    <ImageView
                        android:id="@+id/showMenu"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/open_menu"
                        android:padding="5dp"
                        android:visibility="gone" />
                </RelativeLayout>

            </LinearLayout>

            <!-- -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">
                <!-- -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/service_car_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/car_name"
                            android:textColor="@android:color/white"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/serviceCapacity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:drawableStart="@drawable/ic_passanfer"
                            android:drawableLeft="@drawable/ic_passanfer"
                            android:drawablePadding="10dp"
                            android:drawableTint="@color/white"
                            android:padding="3dp"
                            android:paddingRight="4dp"
                            android:text="4"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="@android:color/white" />
                    </LinearLayout>

                </LinearLayout>


                <!-- -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7.5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/Routenplaner"
                            android:textColor="@android:color/white"
                            android:textSize="17sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/llLeftTop"
                                android:layout_width="20dp"
                                android:layout_height="100dp"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="8sp"
                                    android:layout_height="8sp"
                                    android:layout_marginTop="12dp"
                                    android:background="@drawable/pick_up_location"
                                    android:backgroundTint="@android:color/white" />

                                <View
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:background="@drawable/vertical_dashed_line" />


                                <ImageView
                                    android:layout_width="8sp"
                                    android:layout_height="8sp"
                                    android:layout_marginBottom="12dp"
                                    android:background="@drawable/pick_up_location"
                                    android:backgroundTint="@color/colorPrimaryDark" />
                            </LinearLayout>

                            <!-- Top Adresse  -->
                            <LinearLayout
                                android:id="@+id/TopAdresse"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_toRightOf="@+id/llLeftTop"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/AdresseFrom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/Adress"
                                        android:textColor="@android:color/white"
                                        android:textSize="15sp"
                                        android:visibility="gone" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/AdresseFrom"
                                    android:layout_marginLeft="12dp"
                                    android:layout_toRightOf="@+id/llLeftTop"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/AdresseFromD"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/_8sdp"
                                        android:text="@string/AdressD"
                                        android:textColor="@android:color/white"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:orientation="horizontal"
                                        android:visibility="gone">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1">

                                            <TextView
                                                android:id="@+id/dateFromD"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/date_d"
                                                android:textColor="@android:color/white"
                                                android:textSize="15sp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1">

                                            <TextView
                                                android:id="@+id/dateFromF"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/date_f"
                                                android:textColor="@android:color/white"
                                                android:textSize="15sp" />
                                        </LinearLayout>

                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1sp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:background="@android:color/white" />
                                </LinearLayout>
                            </LinearLayout>

                            <!-- bottom adresse -->
                            <LinearLayout
                                android:id="@+id/bottomAdresse"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/TopAdresse"
                                android:layout_marginLeft="15dp"
                                android:layout_toRightOf="@+id/llLeftTop"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/AdresseTo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/Adress"
                                        android:textColor="@android:color/white"
                                        android:textSize="15sp"
                                        android:visibility="gone" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12dp"
                                    android:layout_toRightOf="@+id/llLeftTop"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/AdresseToD"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_8sdp"
                                        android:text="@string/AdressD"
                                        android:textColor="@android:color/white"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:layout_marginTop="@dimen/_8sdp"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1">

                                            <TextView
                                                android:id="@+id/dateToD"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/date_d"
                                                android:textColor="@android:color/white"
                                                android:textSize="15sp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1">

                                            <TextView
                                                android:id="@+id/dateToF"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/date_f"
                                                android:textColor="@android:color/white"
                                                android:textSize="15sp" />
                                        </LinearLayout>

                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1sp"
                                android:layout_below="@+id/bottomAdresse"
                                android:layout_marginTop="8dp"
                                android:background="@android:color/white" />
                        </RelativeLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2.5"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/priceTrip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/price"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </LinearLayout>

                <!-- -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/plus"
                        android:textColor="@android:color/white"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="7.5">

                            <TextView
                                android:id="@+id/childSeats"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:drawableStart="@drawable/seat"
                                android:drawableLeft="@drawable/seat"
                                android:drawablePadding="10dp"
                                android:padding="2dp"
                                android:paddingRight="4dp"
                                android:text="@string/plus1"
                                android:textColor="@android:color/white"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/babySeat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/childSeats"
                                android:layout_marginTop="2dp"
                                android:drawableStart="@drawable/baby_seat"
                                android:drawableLeft="@drawable/baby_seat"
                                android:drawablePadding="10dp"
                                android:padding="2dp"
                                android:paddingRight="4dp"
                                android:text="@string/plus2"
                                android:textColor="@android:color/white"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/nameTag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/babySeat"
                                android:layout_marginTop="2dp"
                                android:drawableStart="@drawable/name"
                                android:drawableLeft="@drawable/name"
                                android:drawablePadding="10dp"
                                android:padding="2dp"
                                android:paddingRight="4dp"
                                android:text="@string/plus3"
                                android:textColor="@android:color/white"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1sp"
                                android:layout_below="@+id/nameTag"
                                android:layout_marginTop="8dp"
                                android:background="@android:color/white" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center"
                            android:layout_weight="2.5"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/childSeatsPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/price"
                                android:textColor="@android:color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/babySeatPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/childSeatsPrice"
                                android:text="@string/price"
                                android:textColor="@android:color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/nameTagPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/babySeatPrice"
                                android:text="@string/price"
                                android:textColor="@android:color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>

                <!-- -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/notes"
                        android:textColor="@android:color/white"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/detailNote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="@string/notes_d"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginTop="8dp"
                        android:background="@android:color/white"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="25dp"
                        android:layout_weight="7.5">

                        <TextView
                            android:id="@+id/total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:text="@string/gesamt"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/Mwste"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/total"
                            android:layout_marginBottom="3dp"
                            android:text="@string/mwste"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/net"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/Mwste"
                            android:layout_marginBottom="3dp"
                            android:text="@string/netto"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="2.5"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/totalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/price"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/mwste"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/totalPrice"
                            android:layout_marginBottom="2dp"
                            android:text="@string/price"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/nettoPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mwste"
                            android:text="@string/price"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/white" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/creditCardNbr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="2dp"
                        android:drawablePadding="10dp"
                        android:padding="1dp"
                        android:text="@string/cardNbr"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />


                    <TextView
                        android:id="@+id/netlPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/price"
                        android:textColor="@android:color/white"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-33dp"
                    android:visibility="invisible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="2dp"
                        android:drawablePadding="10dp"
                        android:padding="1dp"
                        android:text="@string/cardNbr"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/addCreditCard"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/ic_add_circle"
                        android:padding="5dp"
                        android:visibility="gone" />
                </RelativeLayout>

                <Button
                    android:id="@+id/submit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_margin="25dp"

                    android:background="@drawable/rounded_button"
                    android:text="Bestatigen"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>