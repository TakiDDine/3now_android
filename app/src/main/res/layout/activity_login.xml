<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/_20sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/logo"
            android:gravity="center"
            android:fontFamily="@font/muli_semibold"
            android:text="@string/user"
            android:textColor="@color/black"
            android:textSize="@dimen/_24sdp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_below="@+id/logo"
            android:src="@drawable/appicon"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/viewLoginLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_96sdp"
            android:layout_centerVertical="true"

            android:background="@drawable/middle_box"
            android:orientation="vertical">


            <com.ilyft.user.Utils.MyEditText
                android:id="@+id/etEmail"
                android:layout_width="@dimen/_230sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:backgroundTint="@color/transparent"
                android:drawableLeft="@drawable/ic_user_name"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/black"
                android:paddingLeft="@dimen/_7sdp"
                android:textSize="@dimen/_14sdp" />
            <View
                android:layout_width="@dimen/_230sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="#f2f2f2" />


            <com.ilyft.user.Utils.MyEditText

                android:id="@+id/etPassword"
                android:layout_width="@dimen/_230sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent"
                android:drawableLeft="@drawable/ic_pasword"
                android:drawablePadding="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:hint="@string/password"
                android:paddingLeft="@dimen/_7sdp"
                android:textColorHint="@color/black"
                android:inputType="textPassword"
                android:textSize="@dimen/_14sdp" />


        </LinearLayout>


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:text="@string/next"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp"
            android:background="@drawable/round_shape" />

        <!--<LinearLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:gravity="right"-->
        <!--android:visibility="visible">-->
        <!---->

        <!--<ImageButton-->
        <!--android:id="@+id/btnLogin"-->
        <!--android:layout_width="@dimen/_48sdp"-->
        <!--android:layout_height="@dimen/_48sdp"-->
        <!--android:background="@drawable/round_shape"-->
        <!--android:src="@drawable/right_arrow_new" />-->

        <!--</LinearLayout>-->

        <com.ilyft.user.Utils.MyTextView
            android:id="@+id/txtForget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_25sdp"
            android:textSize="@dimen/_14sdp"
            android:layout_marginEnd="21dp"
            android:layout_below="@+id/viewLoginLayout"

            android:gravity="center"
            android:text="@string/i_forgot_my_password" />


        <LinearLayout
            android:id="@+id/registerLayout"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginBottom="@dimen/_65sdp"
            android:layout_below="@+id/viewLoginLayout"
            android:background="@drawable/box_registration">

            <com.ilyft.user.Utils.MyBoldTextView
                android:id="@+id/txtSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="@string/register"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_18sdp" />


        </LinearLayout>



    </RelativeLayout>


    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/_5sdp"

        android:orientation="vertical">

        <!--<com.mbeba.user.Utils.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or signin with"
            android:textSize="@dimen/_13sdp"/>-->

        <LinearLayout
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.ilyft.user.Utils.MyTextView
                android:id="@+id/btnGoogle"
                android:drawableEnd="@drawable/ic_google"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text="@string/login_with_google"
                android:layout_marginEnd="@dimen/_5sdp"
                android:gravity="center|end"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_height="wrap_content" />
            <com.ilyft.user.Utils.MyTextView
                android:id="@+id/btnFb"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableEnd="@drawable/ic_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/login_with_facebook"
                android:gravity="center|end" />
            <!--<Button-->
                <!--android:gravity="end"-->
                <!--android:id="@+id/btnFb"-->
                <!--android:layout_width="@dimen/_42sdp"-->
                <!--android:layout_height="@dimen/_42sdp"-->
                <!--android:background="@drawable/ic_fb"/>-->



        </LinearLayout>

    </LinearLayout>

</RelativeLayout>