    <de.threenow.Utils.MyTextView
        android:id="@+id/txtForget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_agb_login"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:gravity="bottom"
        android:text="@string/i_forgot_my_password"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp" />

    <de.threenow.Utils.MyTextView
        android:id="@+id/txtSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_agb_login"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_25sdp"
        android:text="@string/register"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp" />



    <de.threenow.Utils.MyTextView
        android:id="@+id/txt_agb_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/ll_agb"
        android:gravity="center"
        android:text="@string/when_you_create_an_account_you_agree_to_ours"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        />

    <LinearLayout
        android:id="@+id/ll_agb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
