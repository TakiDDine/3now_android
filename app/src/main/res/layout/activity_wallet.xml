<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="?actionBarSize"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/_7sdp"
            android:tint="@color/white"
            android:src="@drawable/backarrow" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/_7sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_12sdp"
                android:fontFamily="@font/muli_semibold"
                android:textColor="@color/white"
                android:textSize="@dimen/_24sdp"
                android:text="@string/add_amount"/>

        </LinearLayout>

    </LinearLayout>
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/wallet_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        card_view:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingTop="16dp">

            <ImageView
                android:src="@drawable/new_wallet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_84sdp" />
            <com.ilyft.user.Utils.MyBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/wallet_balance"
                android:textColor="@color/black_text_color"
                android:layout_marginTop="10dp"
                android:textSize="14sp" />

            <com.ilyft.user.Utils.MyBoldTextView
                android:id="@+id/balance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="$0.0"
                android:textColor="@color/black_text_color"
                android:textSize="25sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/add_money_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        card_view:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="16dp">

            <com.ilyft.user.Utils.MyBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/add_money"
                android:textColor="@color/black_text_color"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/currencySymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/money_et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/one"
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:background="@drawable/border_stroke"
                    android:visibility="visible" />

                <Space
                    android:layout_width="3dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/two"
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:background="@drawable/border_stroke"
                    android:visibility="visible" />

                <Space
                    android:layout_width="3dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/three"
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:background="@drawable/border_stroke"
                    android:visibility="visible" />
            </LinearLayout>


            <Button
                android:id="@+id/add_fund_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_button"
                android:text="@string/add_money"
                android:textColor="@color/text_color_white"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
